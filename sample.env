# OpenSearch (Wazuh Indexer)
OS_URL=https://wazuh-indexer.example.org:9200
OS_USER=admin
OS_PASS=admin_password
OS_VERIFY_TLS=true

# Sidecar indices
EXPLAIN_INDEX=wazuh-explain-v1
FEEDBACK_INDEX=wazuh-explain-feedback-v1

# Explainer config
EXPLAINER_BACKEND=shap       # shap | lime
TOP_K_FEATURES=8
FEATURE_MAP_PATH=/app/src/model_api/feature_map.yaml
MODEL_PATH=/app/src/model_api/model.joblib
POLICY_PATH=/app/src/model_api/policy.yaml
