{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 380, "height": 220, "padding": 5,
  "data": [
    {
      "name": "raw",
      "url": {
        "%context%": false,
        "index": "wazuh-explain-v1",
        "body": {
          "size": 1,
          "sort": [ { "timestamp": { "order": "desc" } } ],
          "_source": ["top_features"]
        }
      },
      "format": { "property": "hits.hits" }
    },
    {
      "name": "features",
      "source": "raw",
      "transform": [
        { "type": "formula", "as": "tf", "expr": "datum._source.top_features ? datum._source.top_features : []" },
        { "type": "flatten", "fields": ["tf"], "as": ["item"] },
        { "type": "formula", "as": "feature", "expr": "datum.item.feature" },
        { "type": "formula", "as": "impact", "expr": "datum.item.impact" },
        { "type": "collect", "sort": {"field": "impact", "order": "descending"} }
      ]
    }
  ],
  "scales": [
    { "name": "y", "type": "band", "domain": {"data":"features","field":"feature"}, "range":"height", "padding":0.2 },
    { "name": "x", "type": "linear", "domain": {"data":"features","field":"impact"}, "nice": true, "range": "width" }
  ],
  "axes": [
    { "orient": "left", "scale": "y" },
    { "orient": "bottom", "scale": "x", "title": "SHAP Impact Value" }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {"data":"features"},
      "encode": {
        "enter": {
          "y": {"scale":"y", "field":"feature"},
          "height": {"scale":"y","band":1},
          "x": {"scale":"x","value":0},
          "x2": {"scale":"x","field":"impact"},
          "fill": [
            {"test": "datum.impact > 0", "value": "#dc2626"},
            {"value": "#16a34a"}
          ]
        }
      }
    }
  ]
}