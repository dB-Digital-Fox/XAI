# === TRAINING ===
# Try OpenStack first; on any error, fall back to local PARTS_GLOB
OPENSTACK_ENABLED=false

# Only required when OPENSTACK_ENABLED=true
OS_AUTH_URL=
OS_USERNAME=
OS_PASSWORD=
OS_PROJECT_NAME=
OS_USER_DOMAIN_NAME=Default
OS_PROJECT_DOMAIN_NAME=Default
OS_CONTAINER=siem-training
OS_PREFIX=parts/                 # e.g., parts/part_*.json  inside the container

# Local fallback glob (used if OpenStack is disabled or unreachable)
PARTS_GLOB=./data/parts/part_*.json

# Output model location
MODEL_PATH=./training/model.pkl

#Other configs
FEATURE_MAP_PATH=./config/feature_map.yaml
